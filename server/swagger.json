
{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "R-SYSTEM",
    "description": "system Rhp"
  },
  "host": "localhost:8888",
  "basePath": "/api/v1",
  "tags": [{
    "name": "Users",
    "description": "API for users in the system"
  }],
  "schemes": [
    "http"
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Create new user in system",
        "parameters": [{
          "name": "user",
          "in": "body",
          "description": "User that we want to create",
          "schema": {
            "$ref": "#/definitions/UserCreate"
          }
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      },
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get all users in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        },
        "security": [{
          "JWT": []
        }]
      }
    },
    "/users/{userId}": {
      "parameters": [{
        "name": "userId",
        "in": "path",
        "required": true,
        "description": "ID of user that we want to find",
        "type": "string"
      }],
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get user with given ID",
        "responses": {
          "200": {
            "description": "User is found",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      },
      "delete": {
        "summary": "Delete user with given ID",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "User is deleted",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      },
      "put": {
        "summary": "Update user with give ID",
        "tags": [
          "Users"
        ],
        "parameters": [{
          "name": "body",
          "in": "body",
          "description": "body",
          "schema": {
            "$ref": "#/definitions/ICal"
          }
        }],
        "responses": {
          "200": {
            "description": "User is updated",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/users/is-login": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Check isLogin user",
        "responses": {
          "200": {
            "description": "User is Login",
            "schema": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Login user by email and password in system",
        "parameters": [{
          "name": "login",
          "in": "body",
          "description": "Login user ",
          "schema": {
            "$ref": "#/definitions/UserLogin"
          }
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Login success",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/users/google": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Login by google",
        "parameters": [{
          "name": "Login google",
          "in": "body",
          "description": "Login google user",
          "schema": {
            "$ref": "#/definitions/Google"
          }
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Login google success"
          }
        }
      }
    }

  },
  "securityDefinitions": {
    "JWT": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "UserCreate": {
      "properties": {
        "userid": {
          "type": "string",
          "uniqueItems": true
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string",
          "uniqueItems": true
        },
        "name": {
          "type": "string",
          "uniqueItems": true
        },
        "nameDisplay": {
          "type": "string",
          "uniqueItems": true
        }
      },
      "required": [
        "userid",
        "email",
        "password",
        "name",
        "nameDisplay"
      ]
    },
    "UserLogin": {
      "properties": {
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string",
          "uniqueItems": true
        }
      },
      "required": [
        "email",
        "password"
      ]
    },
    "Google": {
      "required": [
        "asset-token"
      ],
      "properties": {
        "asset-token": {
          "type": "string",
          "uniqueItems": true
        }
      }
    },
    "User": {
      "properties": {
        "_id": {
          "type": "integer"
        },
        "userid": {
          "type": "string",
          "uniqueItems": true
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string",
          "uniqueItems": true
        },
        "name": {
          "type": "string",
          "uniqueItems": true
        },
        "nameDisplay": {
          "type": "integer"
        },
        "location": {
          "type": "string"
        },
        "avatar": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "about": {
          "type": "string"
        },
        "social": {
          "type": "string"
        },
        "story": {
          "type": "string"
        },
        "_notifications": {
          "type": "array"
        },
        "_questions": {
          "type": "array"
        },
        "_anwsers": {
          "type": "array"
        },
        "_reputation": {
          "type": "object"
        },
        "_permissions": {
          "type": "array"
        },
        "_ranks": {
          "type": "object"
        },
        "_favorities": {
          "type": "array"
        }
      },
      "required": [
        "userid",
        "email",
        "password",
        "name",
        "nameDisplay"
      ]
    },
    "Users": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/User"
      }
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ]
}
